{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },

  "functions": {
    "source": "../functions",
    "runtime": "nodejs18"
  },

  "storage": {
    "rules": "storage.rules"
  },

  "hosting": {
    "public": "../admin_panel/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },

  "emulators": {
    "auth": { "port": 9099 },
    "functions": { "port": 5001 },
    "firestore": { "port": 8080 },
    "storage": { "port": 9199 },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  }
}
